{
    "compilerOptions": {
        "strict": true,
        "target": "es5",
        "declaration": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "downlevelIteration": true,
        "sourceMap": true,
        "outDir": "dist",
        "rootDir": "./src",
        "lib": ["dom", "es2015"],
        "jsx": "react",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true
    },
    "exclude": ["node_modules", "test", "dist"],
    "types": ["node", "jest"]
}
